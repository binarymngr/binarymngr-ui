@import './mixin'

/*
 | Generic styles
 */
table
    ol, ul
        margin-bottom: 0
        padding-left: 20px


/*
 | Core application
 */
.spine
    &.stack
        > *
            display: none
        .active
            display: block


/*
 | Special components
 */
#noscript
    margin: 40vh auto 0
    padding: 0 20px
    max-width: 600px
    font-size: 24px
    text-align: center
    img
        max-width: 100%
    p
        margin-top: 30px
