@import './mixin'

/*
 | Generic styles
 */
// more spacing between page titles + content
h1
  margin-bottom: 20px
  .page-header &
    margin-bottom: 10px // dashboard title

// more spacing between sub-table titles + content
h2
  hr + &
    margin-bottom: 20px

// fixes bottom spacing for lists in tables
table
  ol, ul
    margin-bottom: 0
    padding-left: 20px
  &:last-child
    margin-bottom: 20px // ensure doesnt stick at bottom

// hacky space between buttons in forms
.btn
  margin-right: 2px
  &:last-child
    margin-right: 0
  // add new button
  &[data-toggle='modal']
    margin-top: -45px

// decreased spacing between the modal form and the buttons
.modal-footer
  margin-top: -25px

/*
 | Core application
 */
.spine.stack
  > *
    display: none
    &.active
      display: block


/*
 | Special components
 */
#noscript
  margin: 40vh auto 0
  padding: 0 20px
  max-width: 600px
  font-size: 24px
  text-align: center
  img
    max-width: 100%
  p
    margin-top: 30px

#noty_topRight_layout_container
  > li
    border-radius: 0 !important

#spinner
  background: rgba(255,255,255,.9)
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: 9999
  .spinner
    margin: 40vh auto 0
