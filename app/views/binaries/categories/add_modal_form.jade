if item
  div.modal-body
    div.form-group
      label.col-md-3.control-label(for='name') Name
      div.col-md-9
        input.form-control(type='text', name='name', value=item.name, placeholder='Caches', required)
    div.form-group
      label.col-md-3.control-label(for='description') Description
      div.col-md-9
        textarea.form-control(name='description', rows='5', placeholder='High-performance in-memory caches.') #{item.description}
  div.modal-footer
    button.btn.btn-default(type='button', data-dismiss='modal') Cancel
    button.btn.btn-primary.spine-submit(type='submit') Save
