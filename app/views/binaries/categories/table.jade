ol.breadcrumb
  li
    a(href='/#/') Home
  li
    a(href='/#/binaries') Binaries
  li Categories
button.btn.btn-primary.pull-right(type='button', data-toggle='modal' data-target='#add-category-modal') Add New
include add-modal.jade
h1 Categories
if categories && categories.length
  table.datatable.table.table-striped.table-bordered
    thead
      tr
        th Name
        th Description
    tbody.items
      each category in categories
        tr
          td
            a(href='/#/binaries/categories/' + category.id) #{category.name}
          td
            if category.description
              | #{category.description}
            else
              | -
  br
  include ../../includes/datatables-js.jade
else
  div.alert.alert-info
    span.pficon.pficon-info
    strong No categories to display.
