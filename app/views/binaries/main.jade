ol.breadcrumb
  li
    a(href='/#/') Home
  li Binaries
h1 Binaries
if binaries && binaries.length
  table.datatable.table.table-striped.table-bordered
    thead
      tr
        th Name
        th Description
        th Homepage
        td(style='text-align: center') Installed
    tbody.items
      each binary in binaries
        tr
          td
            a(href='/#/binaries/' + binary.id) #{binary.name}
          td
            if binary.description
              | #{binary.description}
            else
              | -
          td
            if binary.homepage
              a(href=binary.homepage, target='_blank') #{binary.homepage}
            else
              | -
          td(style='text-align: center')
            if binary.installed
              span.pficon.pficon-ok
            else
              span.pficon-layered
                span.pficon.pficon-error-octagon
                span.pficon.pficon-error-exclamation
  script(charset='utf-8').
    $(document).ready(function () {
      $('.datatable').dataTable();
    });
else
  div.alert.alert-info
    span.pficon.pficon-info
    strong No Binaries to display. 
    a.alert-link(href='/#/binaries/add') Go add one.
