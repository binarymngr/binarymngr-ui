ol.breadcrumb
  li
    a(href='/#/') Home
  li Servers
button.btn.btn-primary.pull-right(type='button', data-toggle='modal' data-target='#add-server-modal') Add New
h1 Servers
if servers && servers.length
  table.datatable.table.table-striped.table-bordered
    thead
      tr
        th ID
        th Name
        th IPv4 Address
    tbody.items
      each server in servers
        tr
          td #{server.id}
          td
            a(href='/#/servers/' + server.id) #{server.name}
          td #{server.ipv4}
  include ../includes/datatables-js.jade
else
  div.alert.alert-info
    span.pficon.pficon-info
    strong No servers to display.
