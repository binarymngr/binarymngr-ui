div#add-server-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='add-server-model-label', aria-hidden='true')
  div.modal-dialog
    div.modal-content
      div.modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true')
          span.pficon.pficon-close
        h4#add-server-modal-label.modal-title Add Server
      form.form-horizontal.item(action='#')
        div.modal-body
            div.form-group
              label.col-md-3.control-label(for='name') Name
              div.col-md-9
                input.form-control(type='text', name='name', placeholder='localhost', required)
            div.form-group
              label.col-md-3.control-label(for='ipv4') IPv4 Address
              div.col-md-9
                input.form-control(type='text', name='ipv4', placeholder='127.0.0.1', pattern='(\\d{1,3}\.){3}\\d{1,3}', required)
        div.modal-footer
          button.btn.btn-default(type='button', data-dismiss='modal') Cancel
          button.btn.btn-primary.spine-save(type='submit') Save
