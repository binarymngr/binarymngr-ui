ol.breadcrumb
  li
    a(href='/#/') Home
  li Administration
  li Roles
button.btn.btn-primary.pull-right(type='button') Add New
h1 Roles
if roles && roles.length
  table.datatable.table.table-striped.table-bordered
    thead
      tr
        th Name
        th Description
    tbody.items
      each role in _.sortBy(roles, 'name')
        tr
          td #{role.name}
          td
            if role.description
              | #{role.description}
            else
              | -
  br
  include ../includes/datatables-js.jade
else
  div.alert.alert-info
    span.pficon.pficon-info
    strong No roles to display.
