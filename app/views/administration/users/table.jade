ol.breadcrumb
  li
    a(href='/#/') Home
  li Administration
  li Users
if rqst.user.is_admin
  button.btn.btn-primary.pull-right(type='button', data-toggle='modal' data-target='#add-user-modal') Add New
h1 Users
if users && users.length
  table.datatable.table.table-striped.table-bordered
    thead
      tr
        th ID
        th Email
    tbody.items
      each user in users
        tr
          td #{user.id}
          td
            a(href='/#/administration/users/' + user.id) #{user.email}
  include ../../includes/datatables-js.jade
else
  div.alert.alert-info
    span.pficon.pficon-info
    strong No users to display.
