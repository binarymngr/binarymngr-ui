if role
  ol.breadcrumb
    li
      a(href='/#/') Home
    li Administration
    li
      a(href='/#/administration/roles') Roles
    li #{role.name}
  h1 #{role.name}
  form.form-horizontal.item(action='#')
    div.form-group
      label.col-md-2.control-label(for='id') ID
      div.col-md-6
        input.form-control(type='text', name='id', value=role.id, pattern='\\d+', required, disabled)
    div.form-group
      label.col-md-2.control-label(for='name') Name
      div.col-md-6
        input.form-control(type='text', name='name', value=role.name, placeholder='admins', equired)
    div.form-group
      label.col-md-2.control-label(for='description') Description
      div.col-md-6
        textarea.form-control(name='description', rows='5') #{role.description}
    div.form-group
      div.col-md-10.col-md-offset-2
        //- admin role cam not be deleted
        if role.id === 1
          button.btn.btn-primary.spine-save(type='submit') Save
          button.btn.btn-default.spine-cancel(type='button') Cancel
        else
          include ../../includes/form-buttons.jade
  hr
  button.btn.btn-primary.pull-right(type='button') Assign
  h2 Users
  if users && users.length
    table.datatable.table.table-striped.table-bordered
      thead
        tr
          th ID
          th Email
      tbody
        each user in users
          tr
            td
              a(href='/#/administration/users/' + user.id)  #{user.id}
            td
              a(href='/#/administration/users/' + user.id) #{user.email}
    include ../../includes/datatables-js.jade
  else
    div.alert.alert-info
      span.pficon.pficon-info
      | No user to display.
else
  include ../../includes/not-found.jade
