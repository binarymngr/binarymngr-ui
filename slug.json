{
  "server": {
    "port"  : 9294
  },

  "routes": [
    { ""        : "./public" },
    { "/test"    : "./test/public" }
  ],

  "packages": {
    "app": {
      "libs"    : [
        "lib/jade/runtime.js",
        "lib/jquery/dist/jquery.js",
        "lib/lodash/lodash.js"
      ],
      "modules" : [
        "spine",
        "spine/lib/local",
        "spine/lib/route",
        "spine/lib/manager"
      ],
      "paths"  : ["./app"],
      "target" : "./public/application.js",
      "jsAfter": "jade.rethrow = function rethrow(err, filename, lineno){ throw err; } "
    },
    "css": {
      "libs"   : [
        "lib/bootstrap/dist/css/bootstrap.css",
        "lib/patternfly/dist/css/patternfly.css"
      ],
      "paths"  : "./css",
      "target" : "./public/application.css"
    },
    "test": {
      "identifier" : "specs",
      "jsAfter"    : "require('lib/setup'); for (var key in specs.modules) specs(key);",
      "paths"      : ["./test/specs"],
      "target"     : "./test/public/specs.js"
    }
  }
}
